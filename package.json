{
  "name": "lyove-editor",
  "version": "0.0.1",
  "description": "A HTML standards-compliant and dependency-free rich text editor",
  "keywords": [
    "contenteditable",
    "editor",
    "html-editor",
    "rte",
    "rich-text",
    "rich-text-editor",
    "wysiwyg",
    "wysiwyg-editor"
  ],
  "author": "Lyove",
  "license": "MIT",
  "bugs": "https://github.com/lyove/editor/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/lyove/editor.git"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "npm run clean && npm run build:css && npm run build:js",
    "build:css": "esbuild src/editor.css --minify --outfile=dist/editor.css",
    "build:js": "esbuild src/editor.js --minify --bundle --outfile=dist/editor.js --target=es2020 --format=esm",
    "clean": "rm -rf dist",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "lint": "lint-staged",
    "lint:scripts": "eslint . --ext .js, .ts",
    "lint:styles": "stylelint ./**/*.{css,scss}",
    "format:scripts": "prettier . --write",
    "format:styles": "stylelint ./**/*.{css,scss} --fix",
    "format": "npm run format:scripts && npm run format:styles"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.1.0",
    "@types/jest": "^29.0.0",
    "@types/jsdom": "^20.0.0",
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "esbuild": "^0.14.49",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "less": "^4.1.3",
    "postcss": "^8.3.3",
    "prettier": "^2.7.1",
    "stylelint": "^14.11.0",
    "stylelint-config-recommended": "^9.0.0",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "vite": "^3.1.0"
  },
  "lint-staged": {
    "src/**": [
      "prettier",
      "eslint"
    ]
  }
}
